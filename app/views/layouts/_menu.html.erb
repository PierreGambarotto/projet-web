<div class="box box_gray">
		<div class="top"></div>
		<div class="box_gray_inner">
			<h2 class="cartouche">Account</h2>
			<div class="middle clear_fix">
					<% if current_user %>
						<p><%= link_to "Log out", logout_path, :remote => true %></p>
					<% else %>
						<p><%= link_to "Log in", login_path, :remote => true %></p>
					<%end%>
			</div>
			<h2 class="cartouche">Navigation</h2>
			<div class="middle clear_fix">
				<p><%= link_to 'Index', posts_path %></p>
			</div>
	</div>
</div>

<% if current_user %>
<div class="is_admin">
<%else%>
<div class="is_not_admin">
<%end%>
	<div class="box box_gray">
		<div class="top"></div>
		<div class="box_gray_inner">
				<h2 class="cartouche">Administration</h2>
				<div class="middle clear_fix">
					<p><%= link_to 'New Post', new_post_path %></p>
					<p><%= link_to 'Create user', '/users' %></p>
				</div>
			</div>
	</div>
</div>
