<h3 class="title_blue">Comments</h3>
<% @post.comments.each do |comment| %>
<div class="anx">	
	<div class="box_blue_no_img">
		<div class="box_in">
			<div class="c_blue"></div>
			<h3><%= comment.author %></h3>
<% if current_user %>
			<div class="is_admin">
<%else%>
			<div class="is_not_admin">
<%end%>
				<p><%= link_to 'Delete Comment', "/posts/#{@post.id}/comments/#{comment.id}",
		             :confirm => 'Are you sure?',
		             :method => :delete%>
				</p>
			</div>
			<p class="p_spacer"><%= comment.body %></p>
		</div>
	</div>
</div>
<% end %>
