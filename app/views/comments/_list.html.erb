<h3>Comments</h3>
<% @post.comments.each do |comment| %>
<fieldset>
	<legend>
    <%= comment.author %>
	</legend>
	<p><%= link_to 'Delete Comment', "/posts/#{@post.id}/comments/#{comment.id}",
               :confirm => 'Are you sure?',
               :method => :delete%>
	</p>
   <p><%= comment.body %></p>
</fieldset>
<% end %>

